<Page x:Class="WpfApp.PageAdmin.PageMenuAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.PageAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню администратора">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Style="{StaticResource Btn_AdminPage}">Добавить студента</Button>
            <Button Style="{StaticResource Btn_AdminPage}">Добавить оценку</Button>
            <Button Style="{StaticResource Btn_AdminPage}">Список студентов</Button>
            <Button Style="{StaticResource Btn_AdminPage}">Редактирование оценки</Button>
            <Button Style="{StaticResource Btn_AdminPage}">Удалить студента</Button>
            <Button Style="{StaticResource Btn_AdminPage}">Выход</Button>
        </StackPanel>
    </Grid>
</Page>
